@model  Sorvete
@{
    ViewData["Title"] = "_Sorvete";
}

<h2>_Sorvete</h2>

<input asp-for="SorveteId" class="form-control" />
<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" />
</div>
<div class="form-group">
    <input asp-for="Vegano" />
    <label asp-for="Vegano"></label>
</div>
<div class="form-group">
    <label asp-for="DataVencimento"></label>
    <input asp-for="DataVencimento" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Tipo"></label>
    <select asp-for="Tipo" class="form-control"
            asp-items="@Html.GetEnumSelectList<TipoSorvete>()">
        <option>Selecione</option>
    </select>
</div>
<input asp-action="Editar" value="Salvar" type="submit" asp-controller="Sorvete" class="btn btn-primary" />